<CustomerCheckout>:
	name: 'cuatomer_checkout'
	#choose_item_id: choose_item_id

	on_pre_enter: root.InitializeScreen()

	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			canvas.before:
				Color:
					rgba: 0,0,1,1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint_y: 0.1
			padding: [20,0,0,0]
			Label:
				text: 'Inventory Manager'
				bold: True
				size_hint_x: None
				font_size: '25sp'
				size: self.texture_size
		BoxLayout:
			orientation: 'vertical'
			spacing: 5
			padding: 10
			Label:
				canvas.before:
					Color:
						rgba: 0,0.5,1,1
					RoundedRectangle:
						pos: self.pos
						size: self.size
				id: update_item_window_
				text: 'Customer checkout'
				size_hint_y: 0.1
			BoxLayout:
				size_hint_y: 0.9
				orientation: 'vertical'
				spacing: 5
				id: update_item_id_row
				BoxLayout:
					orientation: 'horizontal'
					id: choose_item_id_box_id
					padding: 5
					size_hint_y: 0.2
					canvas.before:
						Color:
							rgba: 0,0.5,1,0.5
						RoundedRectangle:
							pos: self.pos
							size: self.size
					Label:
						text: 'Item ID*:'
					RelativeLayout:
						id: choose_item_id_
	
				BoxLayout:
					orientation: 'horizontal'
					spacing: 5
					size_hint_y: 0.15
					id: choose_item_id_box_id_
					Button:
						text: 'Show'
						on_press:
							if root.get_item_details(): root.ShowItemDetails() 
					Button:
						text: 'Back'
						on_press: root.ReturnBack()
					
				BoxLayout:
					id: update_box_template
					padding: 5
					orientation: 'horizontal'
					size_hint_y: 0.4
					spacing: 3
					canvas.before:
						Color:
							rgba: 0.1,0.4,0.5,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					Image:
						id: checkout_image
						size: self.size 
					BoxLayout:
						orientation: 'vertical'
						Label:
							id: checkout_item_name 
						BoxLayout:
							orientation: 'horizontal'
							spacing: 10
							BoxLayout:
								orientation: 'horizontal'
								Label:
									text: 'Count: '
								Label:
									id: checkout_item_number
								Label:
									text: 'Cost: ' 
								Label:
									id: checkout_item_cost
				BoxLayout:					
					orientation: 'vertical'
					spacing: 3
					id: final_checkout_box
					size_hint_y: 0.9
					BoxLayout:
						orientation: 'horizontal'
						size_hint_y: 0.3
						padding: 3
						canvas.before:
							Color:
								rgba: 0.4,0.7,0.5,1
							RoundedRectangle:
								pos: self.pos
								size: self.size
						#padding: [5, 5]
						Label: 
							text: 'Count*'
						TextInput:
							id: Checkout_count
							text: '1'
							#on_focus: root.ValidateEnteredItemNumber(Checkout_count.text)
						Label: 
							text: 'Discount'
						TextInput:
							text: '0'
							id: Checkout_discount
						Label:
							text: '%'
							size_hint_x: 0.2
							
					BoxLayout:
						orientation: 'vertical'
						canvas.before:
							Color:
								rgba: 0.4,0.7,0.5,1
							RoundedRectangle:
								pos: self.pos
								size: self.size
						padding: [5, 5]
						Label:
							text: 'Items added: '
							size_hint: (None, None)
							size: self.texture_size
						ScrollView:
							id: add_item_label
							BoxLayout:
								id: add_item_label_box
								orientation: 'vertical'
								size_hint_y: None
								#height: self.minimum_height
								padding: [3, 3]
					
					BoxLayout:
						orientation: 'vertical'
						size_hint_y: 0.2
						id: final_checkout_box_add
						Button:
							text: 'Add to bucket'
							size_hint_y: 0.025
							on_release: root.AddClicked()
					
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.15
					spacing: 5
					Button:
						text: 'Save'
						on_release: root.Submit()
					Button:
						text: 'Quit'
						on_release: root.ReturnBack()
				

