<DeleteItem>:
	orientation: 'vertical'
	spacing: 5
	BoxLayout:
		orientation: 'vertical'	
		#size_hint_y: None
		canvas.before:
			Color:
				rgba: 0.1,0.4,0.5,0.8
				#rgba: 0.4,0.5,1,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
		Label:
			text: 'Are you sure you want to delete the item?'
			size: self.texture_size

	BoxLayout:
		orientation: 'horizontal'
		spacing: 5
		size_hint_y: 0.2
		Button:
			text: 'Confirm'
			on_press: root.DeleteItemDataBase()
		Button:
			text: 'Refresh'
			on_press: root.RefreshButton()
		Button:
			text: 'Quit'
			on_press: root.ReturnBack()
