<Filechooser>:
	size: root.size
	pos: root.pos
	orientation: 'vertical'
	spacing: 10
	FileChooserIconView:
		id: let_choose
		filters: ['*.png', '*.jpg', '*.jpeg']
		multiselect: False
		on_selection: confirm_btn.disabled = False; here_is_image.source = let_choose.selection[0] if let_choose.selection else ''
	BoxLayout:
		padding: 0,5,0,5
		size_hint_y: 0.4
		canvas.before:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				pos: self.pos
				size: self.size
		Image:
			id: here_is_image
			allow_stretch: True
		
	BoxLayout:
		spacing: 5
		orientation: 'horizontal'
		size_hint_y: 0.1
		Button:
			id: close_btn
			text:'close'
		Button:
			id: confirm_btn
			text:'confirm'
			disabled: True	
