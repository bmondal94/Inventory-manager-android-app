<UpdateItemBoxTemplate>:
	cols: 1
	spacing: 5
	
	#size_hint_y:None 
	#height: self.height
	#id: update_box_template	
	BoxLayout:
		padding: [5,20,5,0]
		orientation: 'vertical'
		canvas.before:
			Color:
				rgba: 0.1,0.4,0.5,1
			RoundedRectangle:
				pos: self.pos
				size: self.size
		Image:
			id: update_image
			source: 'imgs/test.jpg'
			size: self.size 
		
		Label:
			id: update_item_name 
		BoxLayout:
			orientation: 'horizontal'
			spacing: 10
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'ID: '
				Label:
					id: update_item_id
				Label:
					text: 'Count: '
				Label:
					id: update_item_number
				Label:
					text: 'Cost: ' 
				Label:
					id: update_item_cost
