<MainStoreWindow>:
	name: "all_items"
	on_pre_enter: root.ItemBox()
	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			canvas.before:
				Color:
					rgba: 0,0,1,1
				Rectangle:
					pos: self.pos
					size: self.size
			size_hint_y: 0.1
			padding: [20,0,0,0]
			Label:
				text: 'Inventory Manager'
				bold: True
				size_hint_x: None
				font_size: '25sp'
				size: self.texture_size
		BoxLayout:
			orientation:'vertical'
			padding: 10
			BoxLayout:
				orientation:'vertical'
				id: item_whole_box
				spacing: 10
				Label:
					canvas.before:
						Color:
							rgba: 0,0.5,1,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					text: 'Main Store'
					size_hint: (1, 0.1)
				ScrollView:
					id: item_scroll
					size_hint: (1, 0.75)
					padding: [0, 0, 0, 3]
					canvas.before:
						Color:
							rgba: 0,0,0,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
				BoxLayout:
					orientation: 'horizontal'			
					size_hint_y: 0.05
					spacing: 5
					Label:
						canvas.before:
							Color:
								rgba: 0,0.5,1,0.5
							RoundedRectangle:
								pos: self.pos
								size: self.size
						text: 'Item:'
					Button:
						text: 'Add'
						on_press: root.AddItemBtn()
					Button:
						text: 'Update'
						on_press: root.DetailsUpdateScreen()
					Button:
						text: 'Delete'
						on_press: root.DeleteItemScreen()
