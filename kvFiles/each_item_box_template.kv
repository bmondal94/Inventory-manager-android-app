<ItemBoxTemplate>:
	orientation: 'vertical'
	spacing: 3
	size_hint_y: None
	height: '100dp'	
	padding: [5, 5]
	#padding: [5, 5, 15,5]
	canvas.before:
		Color:
			rgba: 0.1,0.7,0.9,1
		RoundedRectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.8
		spacing: 8
		Image:
			id: image
			source: 'imgs/test.jpg'
			size_hint_x: 0.33 
			allow_stretch: True
			size: self.texture_size
			
		BoxLayout:
			orientation: 'vertical'
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: 'Name:'
					size_hint_x: 0.3
				Label:
					id: item_name
			BoxLayout:
				orientation: 'horizontal'
				Label:
					text: '   ID:'
					size_hint_x: 0.12
				Label:
					id: item_id
			BoxLayout:
				orientation: 'horizontal'
				spacing: 10
				BoxLayout:
					orientation: 'horizontal'
					Label:
						text: 'Stock:'
					Label:
						id: item_number

				BoxLayout:
					orientation: 'horizontal'
					Label:
						text: 'Price:'
					Label:
						id: item_cost
	BoxLayout:
		orientation: 'horizontal'
		size_hint_y: 0.3
		#spacing: 150
		BoxLayout:
			orientation: 'horizontal'
			size_hint_x: 0.5
			spacing: 3
			TextInput:
				id: NumberOfItems
				text: '1'
				cursor_color: 0,0,0,1
				#multiline: False
				on_focus: NumberOfItems.text = '1'
			Button:
				id: add_item_count
				text: '+'
				size_hint_x: 0.3
				on_press: root.buttonAddClicked(item_id.text, NumberOfItems.text)
			Button:
				id: delete_item_count
				text: '-'
				size_hint_x: 0.3
				on_press: root.buttonDeleteClicked(item_id.text, NumberOfItems.text)
		Label:
			size_hint_x: 0.3
		BoxLayout:
			orientation: 'horizontal'
			size_hint_x: 0.15
			spacing: 15
			#padding: 5
			Button:
				#text: 'Remove item'
				#size_hint_x: 0.06
				background_normal: 'imgs/app/update.jpg'
				border: 0,0,0,0
				on_press: root.DetailsUpdateScreen()
			Button:
				#text: 'Remove item'
				#size_hint_x: 0.08
				background_normal: 'imgs/app/delete.jpg'	
				border: 0,0,0,0
				on_press: root.RemoveItem()
