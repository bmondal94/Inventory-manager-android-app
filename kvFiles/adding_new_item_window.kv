<AddItemWindow>:
	name: "new_item_add"

	item_id: item_id
	item_namee: item_name
	item_number: item_numbers
	item_cost: item_cost
	image: image_path

	#on_pre_enter: root.ID_list()

	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation:'vertical'
		BoxLayout:
			id: heading
			size_hint_y: 0.08

		BoxLayout:	
			orientation: 'vertical'
			padding: 10
			BoxLayout:
				orientation: 'vertical'
				spacing: 5
					
				Label:
					canvas.before:
						Color:
							rgba: 0,0.5,1,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					text: 'Add new items'
					bold: True
					font_size: '20sp'
					size_hint_y: 0.06
				BoxLayout:
					orientation:'vertical'
					padding: 5
					size_hint_y: 0.3
					spacing: 5
					canvas.before:
						Color:
							rgba: 0.1,0.4,0.5,0.8
						RoundedRectangle:
							pos: self.pos
							size: self.size
					BoxLayout:
						orientation: 'horizontal'
						spacing: 10
						Label:
							text: 'Name*'
							size_hint_x: 0.4
		
						TextInput:
							id: item_name
							cursor_color: 0,0,0,1
							text: 'test'
							hint_text: 'item name'
							on_text: root.CheckLength_name()
							#multiline: False
		
					BoxLayout:
						orientation: 'horizontal'
						spacing: 10
						Label:
							text: 'ID*'
							size_hint_x: 0.4
		
						BoxLayout:
							orientation: 'horizontal'
							spacing:2
							TextInput:
								id: item_id
								cursor_color: 0,0,0,1
								text: '1'
								hint_text: 'unique item id'
								on_text: root.CheckLength_id()
							Button:
								#text: 'Generate'
								background_normal: 'imgs/app/random2.jpg'
								border: 0,0,0,0
								size_hint_x: 0.2
								on_press: root.GenerateRandomId()
		
					BoxLayout:
						orientation: 'horizontal'
						spacing:10
						Label:
							text: 'Stock'
							size_hint_x: 0.4
		
						TextInput:
							id: item_numbers
							cursor_color: 0,0,0,1
							text: '0'
		
					BoxLayout:
						orientation: 'horizontal'
						spacing: 10
						Label:
							text: 'Price (/item)'
							size_hint_x: 0.4
		
						TextInput:
							id: item_cost
							cursor_color: 0,0,0,1
							text: '0'
		
					BoxLayout:
						orientation: 'horizontal'
						spacing: 10
						Label:
							text: 'Image'
							size_hint_x: 0.4
						BoxLayout:
							orientation: 'horizontal'
							spacing:2
							TextInput:
								id: image_path
								cursor_color: 0,0,0,1
								text: 'imgs/test.jpg'
							Button:
								id: filechoose_picture
								background_normal: 'imgs/app/folder.jpg'
								border: 0,0,0,0
								#text: 'Camera'	
								size_hint_x: 0.2
								on_press: root.FileChooserClick()
							Button:
								id: camera_take_picture
								background_normal: 'imgs/app/camera.jpg'
								border: 0,0,0,0
								#text: 'Camera'	
								size_hint_x: 0.2
								on_press: root.CameraClick()
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.2
					spacing: 10	
					Label:
						canvas.before:
							Color:
								rgba: 0.1,0.4,0.5,1
							RoundedRectangle:
								pos: self.pos
								size: self.size
						text: ' - "*" is mandatory. \n- Default stock is 0. \n- Default price is 0. \n- Default image is test.jpg .\n- Multiple item can be added.'
						#size_hint: None, None
						size_hint_x: 0.67
						size: self.texture_size
					BoxLayout:
						size_hint_x: 0.33
						padding: 2
						canvas.before:
							Color:
								rgba: 0.1,0.4,0.5,1
							Line:
								width: 1.5
								rounded_rectangle: self.x, self.y, self.width, self.height, 10
						Image:
							source: image_path.text 
							allow_stretch: True
							size: self.texture_size
		
				BoxLayout:
					orientation: 'vertical'
					canvas.before:
						Color:
							rgba: 0.4,0.7,0.5,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					padding: [5, 5]
					size_hint_y: 0.34
					Label:
						text: 'Items added: '
						size_hint: (None, None)
						size: self.texture_size
					ScrollView:
						id: add_item_label
						BoxLayout:
							id: add_item_label_box
							orientation: 'vertical'
							size_hint_y: None
							height: self.minimum_height
							spacing: 5
		
				BoxLayout:
					orientation: 'vertical'
					spacing: 3
					size_hint_y: 0.1
					Button:
						text: 'Add to bucket'
						size_hint_y: 0.025
						on_release: if root.CheckItemsEligibility(): root.AddItemWidget()
			
					BoxLayout:
						orientation: 'horizontal'
						size_hint_y: 0.025
						spacing: 5
						Button:
							text: 'Save'
							on_release: 
								root.Submit()
						Button:
							text: 'Home'
							on_release:
								root.manager.transition.direction = "left"
								root.ReturnBack()
	
						Button:
							text: 'Quit'
							on_press: app.stop()
<AddItemWidgetLabelV2>:
	orientation: 'horizontal'
	size_hint_y: None
	height: self.minimum_height 
	spacing: 10
	Label:
		canvas.before:
			Color:
				rgba: 0.1,0.4,0.5,0.8
			RoundedRectangle:
				pos: self.pos
				size: self.size
		id: add_item_widget_label
		size_hint: (0.9, None)
		size: self.texture_size
	Button:
		size_hint_x: 0.06
		background_normal: 'imgs/app/delete.jpg'
		border: 0,0,0,0
		size: self.texture_size
		
		on_press: root.CheckoutDeleteItemFromList()

