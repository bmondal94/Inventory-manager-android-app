<UpdateItemDetails>:
	name: 'details_update'
	#choose_item_id: choose_item_id

	on_pre_enter: root.InitializeScreen()

	canvas.before:
		Color:
			rgba: 1,1,1,1
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			id: heading
			size_hint_y: 0.08
		BoxLayout:
			orientation: 'vertical'
			spacing: 5
			padding: 10
			#size_hint_y: 0.9
			Label:
				canvas.before:
					Color:
						rgba: 0,0.5,1,1
					RoundedRectangle:
						pos: self.pos
						size: self.size
				id: update_item_window_
				text: 'Update item details'
				bold: True
				font_size: '20sp'
				size_hint_y: 0.06
			BoxLayout:
				size_hint_y: 0.2
				orientation: 'vertical'
				spacing: 5
				id: update_item_id_row
				BoxLayout:
					orientation: 'horizontal'
					id: choose_item_id_box_id
					padding: 5
					size_hint_y: 0.3
					canvas.before:
						Color:
							rgba: 0.1,0.4,0.5,0.8
							#rgba: 0,0.5,1,0.5
						RoundedRectangle:
							pos: self.pos
							size: self.size
					Label:
						text: 'Item ID*:'
						size_hint_x: 0.32
					RelativeLayout:
						id: choose_item_id_

					#FloatLayout:
					#	Spinner:
					#		id: choose_item_id
					#		size_hint: None, None
					#		text: 'None'
					#		#size:  350, 100
					#		size:  50, 10
					#		pos_hint: {'center': (.3, .5)}
	
				BoxLayout:
					id: update_box_template
					padding: 5 #[5,20,5,0]
					orientation: 'horizontal'
					size_hint_y: 0.7
					spacing: 8
					canvas.before:
						Color:
							rgba: 0.1,0.4,0.5,1
						RoundedRectangle:
							pos: self.pos
							size: self.size
					Image:
						id: update_image
						size_hint_x: 0.4
						#size: self.size 
					BoxLayout:
						orientation: 'vertical'
						BoxLayout:
							orientation: 'horizontal'
							#spacing: 5
							Label:	
								size_hint_x: 0.3
								text: 'Name:'
					
							Label:
								id: update_item_name 
						BoxLayout:
							orientation: 'horizontal'
							spacing: 10
							BoxLayout:
								orientation: 'horizontal'
								Label:
									text: 'Stock: '
								Label:
									id: update_item_number
								Label:
									text: 'Price: ' 
								Label:
									id: update_item_cost
					
			BoxLayout:
				canvas.before:
					Color:
						rgba: 0.1,0.4,0.5,0.8
					RoundedRectangle:
						pos: self.pos
						size: self.size
				orientation: 'vertical'
				padding: 5 
				spacing: 5
				size_hint_y: 0.5
				id: update_item_details_data_box
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.15
					Label:
						text: 'New name: ' 
						size_hint_x: 0.4
					TextInput:
						cursor_color: 0,0,0,1
						id: update_item_name_new
						hint_text: 'item name'
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.15
					Label:
						text: 'New stock: ' 
						size_hint_x: 0.4
					TextInput:
						cursor_color: 0,0,0,1
						id: update_item_number_new
						hint_text: 'new total number of item. this will be add to old stock.'
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.15
					Label:
						text: 'New price: ' 
						size_hint_x: 0.4
					TextInput:
						cursor_color: 0,0,0,1
						id: update_item_cost_new
						hint_text: 'price per item'
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.15
					Label:
						size_hint_x: 0.4
						text: 'New image: ' 
					BoxLayout:
						orientation: 'horizontal'
						spacing: 5
						TextInput:
							cursor_color: 0,0,0,1
							id: image_path
							hint_text: 'image path'
						Button:
							id: filechoose_picture
							background_normal: 'imgs/app/folder.jpg'
							border: 0,0,0,0
							#text: 'Camera'	
							size_hint_x: 0.3
							on_press: root.FileChooserClick()
						Button:
							id: camera_take_picture
							#text: 'Camera'
							background_normal: 'imgs/app/camera.jpg'
							border: 0,0,0,0
							size_hint_x: 0.3
							on_press: root.CameraClick()
				BoxLayout:
					orientation: 'horizontal'
					size_hint_y: 0.4
					padding: 20
					BoxLayout:
						size_hint_x: 0.4
						padding: 2
						canvas.before:
							Color:
								rgba: 0,0,0,1
							Line:
								width: 1.5
								rounded_rectangle: self.x, self.y, self.width, self.height, 10
						Image:
							id: compare_old_image
							source: update_image.source #if image_path.text else None 
							allow_stretch: True
							size: self.texture_size
					Label:
						size_hint_x: 0.2
					BoxLayout:
						size_hint_x: 0.4
						padding: 2
						canvas.before:
							Color:
								rgba: 0,0,0,1
							Line:
								width: 1.5
								rounded_rectangle: self.x, self.y, self.width, self.height, 10
						Image:
							source: image_path.text 
							allow_stretch: True
							size: self.texture_size
			BoxLayout:
				size_hint_y: 0.19
			BoxLayout:
				orientation: 'horizontal'	
				size_hint_y: 0.05
				spacing: 5
				Button:
					id: update_item_save_btn
					text: 'Save'
					size_hint_x: 0.2
					on_press: root.CheckItem_Update(update_item_number_new.text, update_item_cost_new.text, update_item_name_new.text, image_path.text)
				Button:
					id: update_item_remove_btn
					text: 'Remove'
					size_hint_x: 0.22
					on_press: root.DeleteFullItem() 
				Button:
					text: 'Refresh'
					size_hint_x: 0.22
					id: update_item_refresh_btn
					on_press: root.RefreshScreen()
				Button:
					text: 'Home'
					size_hint_x: 0.18
					on_press: root.ReturnBack()
				Button:
					text: 'Quit'
					size_hint_x: 0.18
					on_press: app.stop()
